<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginEnd="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn1"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/btn5"
            android:text="6"
            android:textSize="30sp"
            android:textStyle="bold" />
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn1"
            android:layout_toEndOf="@id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn1"
            android:layout_toEndOf="@id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn5"
            android:layout_toEndOf="@id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn10"
            android:text="10"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn5"
            android:layout_toEndOf="@id/btn10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn11"
            android:text="11"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn5"
            android:layout_toEndOf="@id/btn11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn12"
            android:text="12"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn13"
            android:text="13"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn9"
            android:layout_toEndOf="@id/btn13"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn14"
            android:text="14"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
            android:layout_marginEnd="5dp"
            android:layout_below="@id/btn9"
            android:layout_toEndOf="@id/btn14"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn15"
            android:text="15"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn16"
            android:backgroundTint="#5E5959"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn9"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/btn15"
            android:text="16"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>
<LinearLayout
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_height="80dp">
    <Button
        android:text="Stop"
        android:layout_margin="3dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <Button
        android:text="Start"
        android:layout_margin="3dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

</LinearLayout>

    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="80dp">
        <TextView
            android:text="Stop"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Start"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>